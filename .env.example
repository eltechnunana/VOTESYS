# VOTESYS Docker Environment Configuration
# Copy this file to .env and update the values for your deployment

# Database Configuration
DB_HOST=db
DB_NAME=votesys
DB_USER=votesys_user
DB_PASS=secure_password_here
DB_ROOT_PASSWORD=root_password_here

# Application Configuration
APP_ENV=production
APP_DEBUG=false
DEVELOPMENT_MODE=false

# Election Configuration
# Set this to the ID of your primary/default election
CURRENT_ELECTION_ID=1

# Security Configuration
ENCRYPTION_KEY=HCU_VOTING_2024_SECURE_KEY_CHANGE_IN_PRODUCTION
VALIDATE_SESSION_IP=false
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
CSRF_TOKEN_EXPIRE=3600

# Session Configuration
VOTER_SESSION_TIMEOUT=3600
ADMIN_SESSION_TIMEOUT=7200
SESSION_TIMEOUT=7200
RATE_LIMIT_WINDOW=900

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Email Configuration (SendGrid SMTP)
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_FROM_EMAIL=noreply@yourdomain.com
MAIL_FROM_NAME=Heritage Christian University Voting System
MAIL_ENCRYPTION=tls

# Timezone Configuration
TIMEZONE=UTC

# Voting Configuration
VOTE_HASH_ALGORITHM=sha256